<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.joron.waffle.drivehistory.util.DateTimeHelper" />

        <variable
            name="libraryViewModel"
            type="com.joron.waffle.drivehistory.domain.viewmodel.LibraryViewModel" />

        <variable
            name="libraryItem"
            type="com.joron.waffle.drivehistory.domain.model.TrackItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/library_list_item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{libraryItem.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_track_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{DateTimeHelper.toDateTimeStr(libraryItem.createdTime)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_track_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>